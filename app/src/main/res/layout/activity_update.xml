<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/update_edittext_call_no"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Call#"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/update_edittext_date"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/update_edittext_call_no"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Date"
        android:padding="5dp"/>
    <EditText
        android:id="@+id/update_edittext_equipment"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/update_edittext_date"
        android:layout_marginStart="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Equipment"
        android:padding="5dp"/>
    <EditText
        android:id="@+id/update_edittext_model_no"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/update_edittext_date"
        android:layout_toEndOf="@+id/update_edittext_equipment"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Model#"
        android:padding="5dp" />
    <EditText
        android:id="@+id/update_edittext_issue"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/update_edittext_equipment"
        android:layout_marginStart="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Issue"
        android:padding="5dp" />
    <EditText
        android:id="@+id/update_edittext_action_taken"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/update_edittext_issue"
        android:layout_marginStart="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Action Taken"
        android:padding="5dp" />
    <EditText
        android:id="@+id/update_edittext_result"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/update_edittext_action_taken"
        android:layout_marginStart="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Result"
        android:padding="5dp" />
    <EditText
        android:id="@+id/update_edittext_remarks"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/update_edittext_result"
        android:layout_marginStart="5dp"
        android:background="@drawable/edittext_background"
        android:hint="Remarks"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/update_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/update_progress_bar"
        android:layout_below="@+id/update_edittext_remarks"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <ProgressBar
        android:id="@+id/update_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_next_ten"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="1dp" />
    <Button
        android:id="@+id/button_update"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button_next"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:text="Update"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"/>
    <Button
        android:id="@+id/button_next"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button_prev"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text="Next"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"/>
    <Button
        android:id="@+id/button_prev"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button_next_ten"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text="Prev"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"/>
    <Button
        android:id="@+id/button_next_ten"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text="Next Ten"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>